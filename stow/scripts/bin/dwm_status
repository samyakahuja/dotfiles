#!/bin/bash

print_wifi() {
	ip=$(ip route get 8.8.8.8 2>/dev/null|grep -Eo 'src [0-9.]+'|grep -Eo '[0-9.]+')
	if=wlp3s0
		while IFS=$': \t' read -r label value
		do
			case $label in SSID) SSID=$value
				;;
            signal) SIGNAL=$(awk '{print $1}' <<< $value)
				;;
		esac
	done < <(iw "$if" link)
	printf "%s %s %+03d dBm %s" "ğŸ—¼" "$SSID" "$SIGNAL" "$ip"
}

print_mem(){
    mem=$(grep -m1 'MemAvailable:' /proc/meminfo | awk '{print $2}')
	echo "ğŸ§  $(bc <<< "scale=2; ($mem) / (1024 * 1024)")G"
}

print_mic() {
    state="$(amixer get Capture | tail -n1 | sed -r 's/.*\[(.*)\].*/\1/')"
    if test $state == "off"
    then
        echo "ğŸ¤"
    else
        echo "ğŸ¤"
    fi
}

print_volume(){
    volume="$(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')"
    state="$(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)\].*/\1/')"
    if test $state == "off"
    then
        echo "ğŸ”‡ $volume%"
    else
        echo "ğŸ”Š $volume%"
    fi
}

print_bat(){
    for battery in /sys/class/power_supply/BAT?
    do
        capacity=$(cat "$battery"/capacity 2> /dev/null) || break
        status=$(sed "s/[Dd]ischarging/ğŸ”‹/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ğŸ”Œ/;s/[Uu]nknown/â“/;s/[Ff]ull/âš¡/" "$battery"/status)
        printf "%s%s%% " "$status" "$capacity"
    done
}

print_date(){
    echo "$(date "+%a %d %b %I:%M")"
}

print_docker(){
    state="$(systemctl is-active docker)"
    if test $state == "active"
    then
        echo "ğŸ³"
    else
        echo ""
    fi
}

print_disk(){
    home="$(df -h | grep '/home' | awk '{print $5}')"
    echo "ğŸ’¾ $home"
}

while true
do
    xsetroot -name " $(print_docker) | $(print_mic) $(print_volume) | $(print_mem) | $(print_disk) | $(print_wifi) | $(print_bat)| $(print_date)"
	sleep 1
done
